rules_version = '2';

// Firebase Storage Security Rules for ABC Security / WSN Guardian
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow authenticated users to upload to their own folders
    match /report/{userId}/{filename} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 100 * 1024 * 1024; // 100MB limit
    }
    
    // Allow authenticated users to upload to incident folders
    match /incident/{userId}/{filename} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 100 * 1024 * 1024; // 100MB limit
    }
    
    // Allow uploads to specific incidents (by incident ID)
    match /incidents/{incidentId}/{filename} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.resource.size < 100 * 1024 * 1024; // 100MB limit
    }
    
    // Allow all authenticated users to read/write (for testing/demo)
    // Remove this in production and use the rules above
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
